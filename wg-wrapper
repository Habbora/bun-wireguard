#!/bin/bash

# Wrapper para executar wg sem sudo
# Precisa ser configurado com setuid

# Verifica se tem permissÃµes de root
if [ "$EUID" -ne 0 ]; then
    echo "âŒ Este script precisa de permissÃµes de root"
    echo "ğŸ’¡ Configure: sudo chown root:root wg-wrapper && sudo chmod +s wg-wrapper"
